{
  "name": "phonics-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:network": "next dev -H 0.0.0.0",
    "dev:public": "start /b npm run dev:network && npx ngrok http 3000",
    "build": "next build",
    "start": "next start",
    "start:network": "next start -H 0.0.0.0",
    "deploy:vercel": "vercel --prod",
    "build:netlify": "next build && npm run create-index",
    "create-index": "node create-index.js",
    "deploy:netlify": "npm run build:netlify && netlify deploy --prod --dir=.next --site=phonics-platform",
    "tunnel": "npx ngrok http 3000",
    "tunnel:inspect": "npx ngrok http 3000 --inspect",
    "tunnel:lt": "lt --port 3000",
    "tunnel:lt-sub": "lt --port 3000 --subdomain phonics",
    "lint": "eslint",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:init": "tsx scripts/init-database.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.9",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.563.0",
    "multer": "^2.0.2",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.13",
    "prisma": "^6.5.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.4",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "ngrok": "^5.0.0-beta.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
